{#
/**
 * @file
 * Theme override for a dropbutton wrapper.
 *
 * Available variables:
 * - children: Contains the child elements of the dropbutton menu.
 *
 * @see template_preprocess()
 *
 * @ingroup themeable
 */
#}
{% if children %}
  {% spaceless %}
    <div class="c-dropbutton__wrapper">
      <div class="c-dropbutton--widget">
        {{ children }}
      </div>
    </div>
  {% endspaceless %}
{% endif %}
