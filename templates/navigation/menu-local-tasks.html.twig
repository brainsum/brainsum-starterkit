{#
/**
 * @file
 * Theme override to display primary and secondary local tasks.
 *
 * Available variables:
 * - primary: HTML list items representing primary tasks.
 * - secondary: HTML list items representing primary tasks.
 *
 * Each item in these variables (primary and secondary) can be individually
 * themed in menu-local-task.html.twig.
 *
 * @ingroup themeable
 */
#}

{#
  Attaching Drupal libraries
#}
{{ attach_library('brainsum_starterkit/tabs') }}

{#
  Building the template structure
#}
<div class="o-container--large">
  {% if primary %}
    <span id="primary-tabs-title" class="u-visually-hide u-visually-hide--focusable">
    {{ 'Primary tabs'|t }}
    </span>

    <nav role="navigation" class="c-tabs__wrapper" aria-labelledby="primary-tabs-title" data-drupal-nav-primary-tabs>
      <ul class="c-tabs c-tabs--primary">{{ primary }}</ul>
    </nav>
  {% endif %}

  {% if secondary %}
    <span id="secondary-tabs-title" class="u-visually-hide u-visually-hide--focusable">
      {{ 'Secondary tabs'|t }}
    </span>

    <nav role="navigation" class="c-tabs__wrapper" aria-labelledby="secondary-tabs-title">
      <ul class="c-tabs c-tabs--secondary">{{ secondary }}</ul>
    </nav>
  {% endif %}
</div>
