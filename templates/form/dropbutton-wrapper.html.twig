{#
/**
 * @file
 * Theme override for a dropbutton wrapper.
 *
 * Available variables:
 * - children: Contains the child elements of the dropbutton menu.
 *
 * @see template_preprocess()
 *
 * @ingroup themeable
 */
#}

{#
  Building the template structure
#}
{% if children %}
  {% apply spaceless %}
    <div class="c-dropbutton__wrapper">
      <div class="c-dropbutton--widget">
        {{ children }}
      </div>
      {#
        angle-down icon from Font Awesome 6 Classic Solid
        https://fontawesome.com/icons/angle-down?s=solid&f=classic
      #}
      <svg
        class="c-icon c-dropbutton__icon"
        xmlns="http://www.w3.org/2000/svg"
        width="10"
        height="10"
        viewBox="0 0 448 512"
        role="img"
        focusable="false"
      >
        <path
          d="M201.4 374.6c12.5 12.5 32.8 12.5 45.3 0l160-160c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L224 306.7 86.6 169.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l160 160z"
        >
      </svg>
    </div>
  {% endapply %}
{% endif %}
