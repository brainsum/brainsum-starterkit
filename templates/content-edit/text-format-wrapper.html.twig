{#
/**
 * @file
 * Theme override for a text format-enabled form element.
 *
 * Available variables:
 * - children: Text format element children.
 * - description: Text format element description.
 * - attributes: HTML attributes for the containing element.
 * - aria_description: Flag for whether or not an ARIA description has been
 *   added to the description container.
 *
 * @see template_preprocess_text_format_wrapper()
 */
#}

{#
  Attaching Drupal libraries
#}
{{ attach_library('brainsum_starterkit/filter') }}

{#
  Defining local variables
#}
{%
  set item_classes = [
    'js-text-format-wrapper',
    'c-text-format-wrapper',
    'js-form-item',
    'c-form-item',
  ]
%}

{%
  set description_classes = [
    aria_description ? 'c-form-item__description',
    disabled ? 'is-disabled',
  ]
%}

{#
  Building the template structure
#}
<div{{ attributes.addClass(item_classes) }}>
  {{ children }}

  {% if description %}
    <div{{ description_attributes.addClass(description_classes) }}>
      {{ description }}
    </div>
  {% endif %}
</div>
