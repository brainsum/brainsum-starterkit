{#
/**
 * @file
 * Icon Component
 *
 * You can create SVG sprite icons easily with this icon component.
 *
 *
 * options:
 * - icon : name of icon (begin with `icon-`)
 * - class: additional CSS class
 * - size : custom width and height of icon
 *          (skip for default width and height defined in the `default_size`
 *          variable below)
 *
 * @code
 * {% include '@brainsum_starterkit/includes/icon.twig' with {
 *   icon: 'icon-partner-volunteer',
 *   class: 'partner__icon'
 * } %}
 * {% include '@brainsum_starterkit/includes/icon.twig' with {
 *   icon: 'icon-download', '
 *   class: 'c-button__icon',
 *   size: '15'
 * } %}
 * {% include '@brainsum_starterkit/includes/icon.twig' with {
 *   icon: 'icon-facebook',
 *   class: 'c-social__icon c-social--facebook',
 *   size: '40'
 *  } %}
 * @endcode
 */
#}

{% set default_size = 24 %}
{% set path = base_path ~ active_theme_path() ~ '/images/icons.svg' %}

<svg
  class="c-icon {{ class }}"
  role="img"
  width="{{ size ? size : default_size }}"
  height="{{ size ? size : default_size }}"
  focusable="false"
>
  <use
    xlink:href="/{{ path ~ '#' ~ icon }}">
  </use>
</svg>
