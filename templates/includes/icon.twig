{#
/**
 * @file
 * Icon Component
 *
 * You can create SVG sprite icons easily with this icon component.
 *
 *
 * options:
 * - iconId   : name of icon (begin with `icon-`)
 * - className: additional CSS class
 * - size     : custom width and height of icon
 *              (skip for default width and height defined in the `default_size`
 *              variable below)
 *
 * @code
 * {% include '@brainsum_starterkit/includes/icon.twig' with {
 *   icon_id: 'icon-partner-volunteer',
 *   class_name: 'partner__icon'
 * } %}
 * {% include '@brainsum_starterkit/includes/icon.twig' with {
 *   icon_id: 'icon-download', '
 *   class_name: 'c-button__icon',
 *   size: '15'
 * } %}
 * {% include '@brainsum_starterkit/includes/icon.twig' with {
 *   icon_id: 'icon-facebook',
 *   class_name: 'c-social__icon c-social--facebook',
 *   size: '40'
 *  } %}
 * @endcode
 */
#}

{% set default_size = 24 %}

<svg
  class="c-icon {{ class_name }}"
  role="img"
  width="{{ size ? size : default_size }}px"
  height="{{ size ? size : default_size }}px"
  focusable="false"
>
  <use xlink:href="/{{ base_path ~ active_theme_path() ~ '/images/icons.svg?v=' ~ "now"|date("Ymd") ~ '#' ~ icon_id }}"></use>
</svg>
